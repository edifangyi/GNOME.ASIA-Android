<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="ui.system.SplashActivity">


    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pv_splash_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        pv:pv_background_color="@color/colorAccent"
        pv:pv_host_text="GNOME.ASIA"
        pv:pv_host_text_anim_time="300"
        pv:pv_particle_text="2017"
        pv:pv_particle_text_size="12sp"
        pv:pv_spread_anim_time="300"
        pv:pv_text_anim_time="800"
        pv:pv_text_color="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:text="@string/splash"
        android:textColor="@color/white"
        android:textSize="11sp" />


</FrameLayout>